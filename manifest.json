{
  "manifest_version": 3,
  "name": "FinDee",
  "version": "0.3.1",
  "description": "Type-ahead find with a draggable HUD.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "FinDee"
  }
}
